#define _CONCAT(a, n) a##n
#define _LABEL(a, n) _CONCAT(_##a, n)
#define LABEL(a) _LABEL(a, __LINE__)

#define for(a, b, c, d) \
    a; \
    LABEL(start):; \
    if (!(b)) ( goto LABEL(end) ); \
    d; \
    c; \
    goto LABEL(start); \
    LABEL(end):;

#define while(a, b) \
    LABEL(start):; \
    if (!(a)) ( goto LABEL(end) ); \
    b; \
    goto LABEL(start); \
    LABEL(end):;